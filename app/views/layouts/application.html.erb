<!DOCTYPE html>
<html>
  <head>
    <title>Estore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "layouts/header"%>
    <%= link_to "Logout", logout_users_path, method: :delete if session[:user_id].present? %>
    <p><%= "Total available products are #{product_count}"%></p>
    <% flash.each do |key, value|%>
          <%= raw value%>
    <%end%>
    <%= yield %>
  </body>
</html>
