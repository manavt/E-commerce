
<%= form_tag action: :allow_login, method: :post do%>
<table class="table table-striped">

  <tr>
    <td><%= label_tag :email %></td>
    <td><%= email_field_tag :email %></td>
  </tr>
  <tr>
    <td><%= label_tag :password %></td>
    <td><%= password_field_tag :password %></td>
  </tr>

  <tr>
    <td><%= submit_tag "Sign In" %></td>
    <td></td>
  </tr>
</table>
<%end%>
<%= link_to "Facebook+", "/auth/facebook"%>
